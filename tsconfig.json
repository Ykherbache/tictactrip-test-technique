{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "target": "esnext",
    "module": "commonjs",
    "skipLibCheck": true,
    "moduleResolution": "node",
    "alwaysStrict": true,
    "sourceMap": true,
    "types": ["jest", "node", "reflect-metadata"],
    "resolveJsonModule": true,
    "declaration": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": ["src/**/*.ts", "__tests__/unit/**/*.ts"],
  "exclude": ["./jest.config.ts"]
}
